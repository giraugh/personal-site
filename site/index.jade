//output: ../$1.html
html
  head
    //font 'lato'
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato")

    //iconic font
    link(rel="stylesheet", href="site/font-awesome/css/font-awesome.min.css")

    //web styling
    link(rel="stylesheet", type="text/css", href="site/style/index.min.css")

    //helper for navigation
    script.
      function goto(e, x) {
        if (!e.ctrlKey)
          window.location.href = "http://" + x
        else
          window.open("http://" + x)
        }
  body
    .wrapper
      //page heading
      h1.title Ewan Breakey

      //social icons
      .soc-icons
        a.fa.fa-github.fa-4x(href="http://github.com/retroverse")
        a.fa.fa-twitter.fa-4x(href="http://twitter.com/retr0verse")

      //Projects
      .box.projects
        a
          h2 Projects
          p.kg(onclick="goto(event, 'tdos.itch.io/knight-game')") Knight Game
          p.hx(onclick="goto(event, 'retroverse.github.io/Hex')") Hex
          p.le(onclick="goto(event, 'github.com/retroverse/LimeEditor')") Lime Editor
          p.et(onclick="goto(event, 'play.google.com/store/apps/details?id=com.tdos.telegram')") Expert Telegram
          p.gl(onclick="") Galana
          p.sh(onclick="goto(event, 'github.com/retroverse/MoonShine')") Moon Shine
          p.ve(onclick="goto(event, 'github.com/retroverse/Venus')") Venus


      //Media
      .box.media
        a
          h2 Media
          p.ot(onclick="goto(event, 'retroverse.github.io/Obtuse-Triangle/site')")
          p.td(onclick="goto(event, 'retroverse.github.io/tdos')")
